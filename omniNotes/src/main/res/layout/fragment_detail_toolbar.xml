<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:id="@+id/title_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="48dp"
    android:layout_marginLeft="48dp"
    android:layout_marginRight="48dp"
    android:layout_marginStart="48dp"
    android:layout_marginTop="?attr/actionBarSize"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5"
    android:orientation="vertical">

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/detail_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:text="@string/title"
        android:textColor="@color/text_color_rev"
        pixlui:typeface="Roboto-Regular.ttf" />

    <com.neopixl.pixlui.components.edittext.EditText
        android:id="@+id/detail_title"
        paddingEnd="16dp"
        paddingStart="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/title"
        android:inputType="textCapSentences"
        android:linksClickable="false"
        android:textAppearance="@style/Text.Large"
        android:textColor="@color/text_color_rev"
        android:textColorHint="@color/text_color_rev_darker"
        android:textCursorDrawable="@null"
        pixlui:typeface="RobotoSlab-Bold.ttf" />

    <View
        android:id="@+id/detail_line_seperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:paddingTop="6dp"
        android:background="@color/text_color_rev" />

    <LinearLayout
        android:id="@+id/detail_timestamps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:layout_marginBottom="0dp"
        android:paddingTop="24dp">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/creation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|start"
            android:padding="0dp"
            android:textColor="@color/text_color_rev"
            android:textAppearance="@style/Text.Small"
            pixlui:typeface="Roboto-Regular.ttf" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/last_modification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="0dp"
            android:textColor="@color/text_color_rev"
            android:textAppearance="@style/Text.Small"
            pixlui:typeface="Roboto-Regular.ttf" />
    </LinearLayout>
</LinearLayout>